<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeMarinho">

    <Button
        android:id="@+id/open_close_btn"
        style="@style/BotaoNavegacao_Selecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="42.1dp"
        android:paddingTop="12.5dp"
        android:paddingRight="42.1dp"
        android:paddingBottom="12.5dp"
        android:text="@string/Travas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/timers_btn"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/timers_btn"
        style="@style/BotaoNavegacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="32.75dp"
        android:paddingTop="12.5dp"
        android:paddingRight="32.75dp"
        android:paddingBottom="12.5dp"
        android:text="@string/Times"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="1dp"
        android:paddingTop="23dp"
        android:paddingRight="1dp"
        android:paddingBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/gaveta1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/gaveta1"
        style="@style/BotaoEstilo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:padding="20dp"
        android:text="@string/Gaveta1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timers_btn" />

    <Button
        android:id="@+id/abre_fecha1"
        style="@style/Gavetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/AbreFecha"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/gaveta1"
        app:layout_constraintEnd_toEndOf="@+id/gaveta1"
        app:layout_constraintTop_toTopOf="@+id/gaveta1" />

    <TextView
        android:id="@+id/gaveta2"
        style="@style/BotaoEstilo"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="@string/Gaveta2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaveta1" />

    <Button
        android:id="@+id/abre_fecha2"
        style="@style/Gavetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/AbreFecha"
        app:layout_constraintBottom_toBottomOf="@+id/gaveta2"
        app:layout_constraintEnd_toEndOf="@+id/gaveta2"
        app:layout_constraintTop_toTopOf="@+id/gaveta2" />

    <TextView
        android:id="@+id/gaveta3"
        style="@style/BotaoEstilo"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="@string/Gaveta3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaveta2" />

    <Button
        android:id="@+id/abre_fecha3"
        style="@style/Gavetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/AbreFecha"
        app:layout_constraintBottom_toBottomOf="@+id/gaveta3"
        app:layout_constraintEnd_toEndOf="@+id/gaveta3"
        app:layout_constraintTop_toTopOf="@+id/gaveta3" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="255dp"
        android:layout_height="820dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="504dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="456dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>